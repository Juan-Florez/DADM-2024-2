<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/black"
    android:padding="16dp">


    <!-- Mensajes de estado del juego -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_human"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <!-- Texto del marcador -->
    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:text="@string/score_format" />



    <!-- Tablero de Tic-Tac-Toe con TableLayout -->
    <TableLayout
        android:id="@+id/play_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <!-- Fila 1 -->
        <TableRow>
            <Button
                android:id="@+id/button0"
                style="@style/BoardButtonStyle"
                android:contentDescription="Cell 1" />

            <Button
                android:id="@+id/button1"
                style="@style/BoardButtonStyle"
                android:contentDescription="Cell 2" />

            <Button
                android:id="@+id/button2"
                style="@style/BoardButtonStyle"
                android:contentDescription="Cell 3" />
        </TableRow>

        <!-- Fila 2 -->
        <TableRow>
            <Button
                android:id="@+id/button3"
                style="@style/BoardButtonStyle"
                android:contentDescription="Cell 4" />

            <Button
                android:id="@+id/button4"
                style="@style/BoardButtonStyle"
                android:contentDescription="Cell 5" />

            <Button
                android:id="@+id/button5"
                style="@style/BoardButtonStyle"
                android:contentDescription="Cell 6" />
        </TableRow>

        <!-- Fila 3 -->
        <TableRow>
            <Button
                android:id="@+id/button6"
                style="@style/BoardButtonStyle"
                android:contentDescription="Cell 7" />

            <Button
                android:id="@+id/button7"
                style="@style/BoardButtonStyle"
                android:contentDescription="Cell 8" />

            <Button
                android:id="@+id/button8"
                style="@style/BoardButtonStyle"
                android:contentDescription="Cell 9" />
        </TableRow>
    </TableLayout>

</LinearLayout>